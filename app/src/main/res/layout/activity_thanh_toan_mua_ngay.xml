<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanhToanMuaNgayActivity"
    android:gravity="center|top"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ln_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <!--    123-->

        <ImageView
            android:id="@+id/img_backToMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/icon_back"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhận hàng"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTenSDtThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thế Sơn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                />
            <TextView
                android:id="@+id/tvSDtThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0867471404"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDiaChiThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Nhà 1,Xóm 2,Thôn 3,Xã 4,Huyện 5,Thành Phố 6"
            />
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/bogoc"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tvTenSP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGiaSP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTenSP1"
            android:layout_marginStart="8dp"
            android:text="Giá Tiền"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_cart"
            android:layout_below="@+id/tvGiaSP1"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/btnTruSoLuong_cart1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSoLuong1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnCongSoLuong_cart1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvTongTien1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cart"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Tổng tiền"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eachCartItemDeleteBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_auto_delete_24" />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"

       android:gravity="center"
       android:layout_height="wrap_content"
       android:layout_marginBottom="30dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_margin="20dp"
           android:layout_height="wrap_content">
           <TextView
               android:paddingLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Phương thức thanh toán"
               android:textStyle="bold"/>
           <RadioGroup

               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <RadioButton
                   android:id="@+id/rdNhanHangThanhToan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Thanh toán khi nhận hàng"
                   android:checked="true"/>

               <RadioButton
                   android:id="@+id/rdBankingThanhToan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Thanh toán bằng banking"/>
           </RadioGroup>
       </LinearLayout>

   </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miến phí vận chuyển cho đơn hàng trên 300,000 đ"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="75dp">

        <LinearLayout
            android:id="@+id/btn_themvaogio"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/dangnhap"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTongThanhToanHoaDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMuaHangThanhToan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Mua\nhàng"
                android:textColor="@color/app_name"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>