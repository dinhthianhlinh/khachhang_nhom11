<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemGioHang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tv_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Giá tiền -->
        <TextView
            android:id="@+id/tv_giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tensp"
            android:layout_marginStart="8dp"
            android:text="Giá Tiền"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Số lượng -->
        <LinearLayout
            android:id="@+id/layout_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_giatien"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnTruSoLuong_cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sl"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnCongSoLuong_cart"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#D1DFB8"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tv_tongtien2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cart"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Tổng tiền"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- CheckBox -->
        <CheckBox
            android:id="@+id/tongt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tongtien2"
            android:layout_alignParentEnd="true"
            android:text="Chọn" />

        <!-- Nút xóa mục -->
        <ImageView
            android:id="@+id/eachCartItemDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_auto_delete_24"
            android:layout_toStartOf="@id/tongt"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
