<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.fragment_QuanLySanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <!--    123-->

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            />
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/samsung_icon"
            android:id="@+id/imgSamSung"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_xiaomi"
            android:id="@+id/imgXiaoMi"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_apple"
            android:id="@+id/imgApple"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_asus"
            android:id="@+id/imgAsus"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_oppo"
            android:id="@+id/imgOppo"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_realme"
            android:id="@+id/imgRealMe"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/searchView"

            />
        <TextView
            android:id="@+id/cartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bogoc"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_gravity="end|top" />

    </LinearLayout>




</FrameLayout>