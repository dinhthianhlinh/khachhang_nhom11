<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#680021FF"
    android:gravity="center"
    android:layout_margin="20sp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/slplogo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTenSP"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/tensanpham"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
 />

        <TextView
            android:id="@+id/tvGiaSP"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/gia"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:layout_marginVertical="4dp" />

        <TextView
            android:id="@+id/tvMoTaSP"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/mpta"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:layout_marginVertical="4dp" />

        <TextView
            android:id="@+id/tvHangSP"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/hang"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:layout_marginVertical="4dp" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="@string/time"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:layout_marginVertical="4dp" />
    </LinearLayout>


</LinearLayout>
